<Window x:Class="WpfApp1.Views.AddEngineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új motor hozzáadása" Height="300" Width="400">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <Label Content="Motor mérete:"/>
            <TextBox Name="tbEngineSize" Margin="0,10"/>

            <Label Content="Üzemanyag típusa:"/>
            <ComboBox Name="cbFuelTypes" DisplayMemberPath="NameEnglish" SelectedValuePath="ID" Margin="0,10"/>

            <Button Content="Hozzáadás" Click="btnAddEngine_Click" Margin="0,10"/>
        </StackPanel>
    </ScrollViewer>
</Window>