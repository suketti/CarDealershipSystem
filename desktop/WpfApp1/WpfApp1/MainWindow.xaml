<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Car Management" Height="600" Width="1000">
    <DockPanel>
        <!-- Top Tab Navigation -->
        <TabControl SelectionChanged="TabControl_SelectionChanged" x:Name="tcPages" DockPanel.Dock="Top">
            <TabItem Header="Kocsik" Cursor="Hand"/>
            <TabItem Header="Helysznek" Cursor="Hand"/>
            <TabItem Header="Markak" Cursor="Hand"/>
            <TabItem Header="Modellek" Cursor="Hand"/>
        </TabControl>

        <!-- Frame for Page Navigation -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
